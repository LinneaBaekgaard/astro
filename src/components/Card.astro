---
const { image, navn, rolle } = Astro.props;
---

<article class="card">
  <img src={image} alt={navn} />
  <h3>{navn}</h3>
  <p>{rolle}</p>
</article>

<style>
  .card img {
    width: 150px;
    height: 150px;
    object-fit: cover;
  }
  :global(.rund) .card img {
    border-radius: 50%;
  }
  :global(.firkant) .card img {
    border-radius: 5px;
  }
  .card:hover {
    cursor: pointer;
    zoom: 110%;
    opacity: 20px;
  }
</style>
